<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Index Page</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {
      var socket = io.connect();

      socket.on('count', function(count){
        $('#number').text(count);
      });

      $('#epic').click(function(){
        socket.emit('epic_clicked');
      });
      $('#reset').click(function(){
        socket.emit('reset_clicked');
      });
    });
    </script>
  </head>
  <body>
    <h1>The button has been pushed <span id="number"></span> time(s)</h1>
    <h2>Push the button to update the count!</h2>
    <button id="epic" type="button">Push the button!</button>
    <button id="reset" type="button">Reset count</button>
  </body>
</html>
